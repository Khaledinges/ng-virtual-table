{
  "name": "ng-virtual-table",
  "version": "1.0.27",
  "description": "Angular 7 virtual scroll table with support dynamic component, draggable, filtering, sorting, resizable and custom config column",
  "main": "index.js",
  "repository": "git@github.com:PxyUp/ng-virtual-table.git",
  "author": "Iurii Panarin <iurii.panarin@tduble.com>",
  "license": "MIT",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "ct": "git add --all && git-cz",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepublish": "build",
    "test": "jest",
    "localyarn": "yarn"
  },
  "prepush": {
    "tasks": ["yarn test"],
    "onDirtyState": "ask",
    "coloredOuput": true
  },
  "ngPackage": {
    "lib": {
      "entryFile": "./lib/public_api.ts"
    },
    "cssUrl": "inline",
    "whitelistedNonPeerDependencies": [
      "angular",
      "rxjs",
      "ng-dynamic-component"
    ]
  },
  "devDependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.0",
    "@angular/cli": "^7.0.0",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/material": "^7.0.0",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.7",
    "commitizen": "^3.0.4",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "ng-packagr": "^4.3.1",
    "prepush": "^3.1.11",
    "rxjs": "^6.3.3",
    "scss-bundle": "^2.4.0",
    "ts-jest": "^23.10.4",
    "tsickle": "^0.33.0",
    "typescript": "^3.1.3",
    "yarn": "^1.10.1",
    "zone.js": "~0.8.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        80
      ]
    }
  },
  "keywords": [
    "virtual scroll",
    "scroll",
    "ngx",
    "angular",
    "angular 7",
    "ngx",
    "dynamic",
    "component",
    "input",
    "output",
    "life-cycle"
  ],
  "peerDependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/material": "^7.0.0"
  },
  "dependencies": {
    "ng-dynamic-component": "^4.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/appTest/",
      "/docs"
    ]
  }
}